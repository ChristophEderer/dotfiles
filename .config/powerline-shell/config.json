{
  "theme": "~/.config/powerline-shell/themes/nord.py",
  "segments": [
    "virtual_env",
    "username",
    "hostname",
    "ssh",
    "git",
    "cwd",
    "hg",
    "jobs",
    "root"
  ],
  "cwd": {
   "mode": "plain"
  },
  "vcs": {
   "show_symbol": "true"
  },
	"common": {
		{
			"function": "powerline.segments.common.env.environment",
			"args": {
				"variable": "POWERLINE_VIRTUAL_ENV_NAME"
			},
			"priority": 50
		},	
		"term_truecolor": false,
		"dividers": {
			"left": {
				"hard": " ",
				"soft": " "
			},
			"right": {
				"hard": " ",
				"soft": " "
			}
		},
		"spaces": 1
	},
	"ext": {
		"ipython": {
			"colorscheme": "default",
			"theme": "in",
			"local_themes": {
				"rewrite": "rewrite",
				"out": "out",
				"in2": "in2"
			}
		},
		"shell": {
			"colorscheme": "default",
			"theme": "default"
		},
		"tmux": {
			"colorscheme": "default",
			"theme": "default"
		},
		"vim": {
			"colorscheme": "default",
			"theme": "default",
			"local_themes": {
				"cmdwin": "cmdwin",
				"help": "help",
				"quickfix": "quickfix"
			}
		},
		"wm": {
			"colorscheme": "default",
			"theme": "default"
		}
	}
}
