# enable Powerline
#
# POWERLINE
#

Powerline_shell_installed=false

function _update_ps1() {
    PS1=$(powerline-shell $?)
}

function _install_ps() {
    git clone https://github.com/b-ryan/powerline-shell
    cd powerline-shell
    python setup.py install
}


if powerline-shell; then 
    Powerline_shell_installed=true
else
    Powerline_shell_installed=false
fi

if [ $Powerline_shell_installed ] && [ $TERM != linux && ! $PROMPT_COMMAND =~ _update_ps1 ]; then
    PROMPT_COMMAND="_update_ps1; $PROMPT_COMMAND"
fi


